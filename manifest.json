{
  "manifest_version": 3,
  "name": "Notas Inteligentes",
  "version": "0.1.0",
  "description": "Guardar y reutilizar prompts dentro de ChatGPT",

  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": "public/icons/sonriente.png"
  },

  "background": {
    "service_worker": "src/background/background.ts"
  },

  "permissions": ["storage", "activeTab", "scripting"],

  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*"],
      "js": ["src/content/contentScript.ts"],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [{
  "matches": ["https://chat.openai.com/*","https://chatgpt.com/*"],
  "resources": ["recursos/boton-notas.html","recursos/barra-lateral.html"]
}]

}
