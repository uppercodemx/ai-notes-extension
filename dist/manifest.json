{
  "manifest_version": 3,
  "name": "Notas Inteligentes",
  "version": "0.1.0",
  "description": "Guardar y reutilizar prompts dentro de ChatGPT",
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": "public/icons/sonriente.png"
  },
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "js": [
        "assets/contentScript.ts-l0sNRNKZ.js"
      ],
      "matches": [
        "https://chat.openai.com/*"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "https://chat.openai.com/*"
      ],
      "resources": [
        "assets/contentScript.ts-l0sNRNKZ.js"
      ],
      "use_dynamic_url": false
    }
  ]
}
